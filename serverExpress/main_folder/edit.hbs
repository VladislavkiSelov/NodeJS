<h1>Добавить курс</h1>
<form action="/courses/{{course._id}}/edit" method="POST">
    <div class="input-field">
        <input id="title" type="text" name="title" value={{course.title}}>
        <label for="title">Название курса</label>
    </div>
    <div class="input-field">
        <input id="price" type="text" name="price" value={{course.price}}>
        <label for=" price">Цена курса</label>
    </div>
    <div class="input-field">
        <input id="img" type="text" name="img" value={{course.img}}>
        <label for=" img">URL курса</label>
    </div>
    <input type="hidden" name="id" value={{course.id}}>
    <button class="btn btn-primary">Редактировать курс</button>
</form>
<form method="post" action="/courses/delete">
    <input type="hidden" name="id" value="{{course._id}}">
    <button type="submit" class="btn red">Удалить</button>
</form>