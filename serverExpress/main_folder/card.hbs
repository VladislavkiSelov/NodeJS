<div class="card">
    {{#if courses.length }}
    <table>
        <thead>
            <tr>
                <th>Название</th>
                <th>Количество</th>
                <th>Действие</th>
            </tr>
        </thead>
        <tbody>
            {{#each courses}}
            <tr>
                <td>{{title}}</td>
                <td>{{count}}</td>
                <td>
                    <button class="btn btn-small delete_btn" data-id="{{id}}">Удалить</button>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    <p>Цена: <span>{{price}}</span></p>
    <form action="orders" method="post">
        <button type="submit" class="btn">Сделать заказ</button>
    </form>
    {{else}}
    <p>Корзина пуста</p>
    {{/if}}
</div>